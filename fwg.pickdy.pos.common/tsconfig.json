{
  "compilerOptions": {
    "target": "es6",
    "lib":["es6","dom"],
    "outDir": "./dist/build",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "removeComments": true,
    //"noUnused": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
	  "experimentalDecorators": true,
    "types": [
      "node", "express" 
    ]
    
  },
//  "include": [
//    "./**/*.d.ts",
//    "./typings/**/*"
//
//  ],
  "exclude": [
        "./node_modules",
        "./**/*.spec.ts",
        "Scripts/typings/node/node.d.ts"//, // < this was causing buffer identifier error
        //"../tgn.common/node_modules/@types/bluebird/index.d.ts"
  ],
  "typeRoots" : [
    "./typings",
    "./node_modules/@types"
  ]
}
